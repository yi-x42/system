# YOLOv11 數位雙生分析系統環境變數設定範例
# 複製此檔案為 .env 並修改相關設定值

# === 基本應用設定 ===
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# === YOLOv11 模型設定 ===
MODEL_PATH=yolo11n.pt
DEVICE=auto
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MAX_DETECTIONS=100

# === 追蹤器設定 ===
TRACKER=bytetrack.yaml
TRACK_HIGH_THRESH=0.6
TRACK_LOW_THRESH=0.1
NEW_TRACK_THRESH=0.7

# === 資料庫設定 ===
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=yolo_system
POSTGRES_PORT=5432

# === Redis 設定 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === MinIO 物件儲存設定 ===
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=yolo-images

# === RabbitMQ 設定 ===
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# === JWT 安全設定 ===
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === 效能設定 ===
MAX_BATCH_SIZE=8
MAX_WAIT_TIME=0.1
GPU_MEMORY_FRACTION=0.8

# === 熱點圖設定 ===
HEATMAP_GRID_SIZE=1024
HEATMAP_WINDOW_MINUTES=5
HEATMAP_GAUSSIAN_SIGMA=2.0

# === 異常事件設定 ===
DWELL_TIME_THRESHOLD=600
LOITERING_THRESHOLD=3600

# === Unity 整合設定 ===
UNITY_WEBSOCKET_PORT=8080
UNITY_UPDATE_INTERVAL=30

# === 日誌設定 ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === 檔案上傳設定 ===
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff,webp
